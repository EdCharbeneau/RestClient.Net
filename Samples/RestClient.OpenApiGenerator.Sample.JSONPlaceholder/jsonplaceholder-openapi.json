  "components": {
    "schemas": {
      "Todo": {
        "type": "object",
        "required": ["userId", "id", "title", "completed"],
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int64",
            "description": "UserId"
          },
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "Id"
          },
          "title": {
            "type": "string",
            "description": "Title"
          },
          "completed": {
            "type": "boolean",
            "description": "Completed"
          }
        }
      },
      "TodoInput": {
        "type": "object",
        "required": ["userId", "title", "completed"],
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int64",
            "description": "UserId"
          },
          "title": {
            "type": "string",
            "description": "Title"
          },
